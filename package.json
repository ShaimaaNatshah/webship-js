{
  "name": "webship-js",
  "version": "1.0.3",
  "description": "Webship JS automated functional testing.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "webship-theme":  {
        "datatable border":["green"],
        "datatable content":["green","italic"],
        "docstring content":["green","italic"],
        "docstring delimiter":["green"],
        "feature description":["green"],
        "feature keyword":["bold","green"],
        "rule keyword":["yellow"],
        "scenario keyword":["greenBright"],
        "scenario name":["green","underline"],
        "step keyword":["bgGreen","black","italic"],
        "step text":["greenBright","italic"],
        "tag":["green"]
  },
  "scripts": {

    "test": "nightwatch --format @cucumber/pretty-formatter --format-options '{\"colorsEnabled\": true}' --format-options '{\"theme\": {\"feature description\":[\"blueBright\"],\"feature keyword\":[\"bold\",\"blue\"],\"feature name\":[\"magenta\",\"underline\"],\"scenario keyword\":[\"bold\",\"magenta\"],\"scenario name\":[\"magenta\",\"underline\"],\"step keyword\":[\"bold\",\"green\"],\"step text\":[\"greenBright\",\"italic\"]}}' --format json:./tests/reports/cucumber-report-$( date '+%Y-%m-%d_%H-%M' ).json --format html:./tests/reports/cucumber-report-$( date '+%Y-%m-%d_%H-%M' ).html"
    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webship/webship-js.git"
  },
  "author": "Webship.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webship/webship-js/issues"
  },
  "homepage": "https://github.com/webship/webship-js",
  "dependencies": {
    "@cucumber/cucumber": "*",
    "chromedriver": "*",
    "@cucumber/pretty-formatter": "^1.0.0-alpha.2",
    "eslint": "^7.32.0",
    "mocha": "^9.1.3",
    "geckodriver": "*",
    "nightwatch": "^2.1.7"
  }
}
